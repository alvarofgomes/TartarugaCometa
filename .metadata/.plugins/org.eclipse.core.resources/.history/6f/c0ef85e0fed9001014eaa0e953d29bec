package com.tartarugacometa.servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.tartarugacometa.BO.EnderecoBO;
import com.tartarugacometa.model.Endereco;

@WebServlet("/enderecoListar")
public class ListarEnderecosServlet extends HttpServlet {

    private static final long serialVersionUID = 1L;

    private EnderecoBO enderecoBo = new EnderecoBO();

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        List<Endereco> enderecos = enderecoBo.listarEnderecoBO();

        request.setAttribute("enderecos", enderecos);

        RequestDispatcher rd =
                request.getRequestDispatcher("/endereco/listar.jsp");
        rd.forward(request, response);
    }
}
