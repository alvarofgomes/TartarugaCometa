package com.tartarugacometa.servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.tartarugacometa.BO.ClienteBO;
import com.tartarugacometa.model.Cliente;

@WebServlet("/cliente")
public class ListarClienteServlet extends HttpServlet {
    
    private static final long serialVersionUID = 1L;
    private ClienteBO clienteBo = new ClienteBO();
    
    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response) 
            throws ServletException, IOException {
        
        List<Cliente> listarClientes = clienteBo.listarClientesBO();
        request.setAttribute("clientes", listarClientes);
        request.getRequestDispatcher("/listarClientes.jsp").forward(request, response);
    }
}