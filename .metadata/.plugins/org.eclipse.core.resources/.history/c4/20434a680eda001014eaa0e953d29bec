<html>
<head>
<meta charset="UTF-8">
<title>Entregas Listar</title>
</head>
<body>

	<h2>Entregas</h2>
	
	<c:if test="${empty entregas}">
	    Nenhuma entrega cadastrada.
	</c:if>
	
	<ul>
	    <c:forEach items="${entregas}" var="entrega">
	        <li>
	            Cliente:${entrega.cliente.nome}
	            (ID: ${entrega.cliente.id}) 
	
	            Status:${entrega.status}
	            Frete:${entrega.frete}
	
	            <a href="entregaEditar?id=${entrega.id}">Editar</a>
	            <a href="entregaRemover?id=${entrega.id}">Remover</a>
	        </li>
	    </c:forEach>
	</ul>

	<a href="/TartarugaCometa/entregaCadastrar">Nova Entrega</a>

